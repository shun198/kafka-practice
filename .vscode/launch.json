{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Batch Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/batch/main.py",
            "justMyCode": false,
            "cwd" : "${workspaceFolder}/",
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "App Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "justMyCode": false,
            "cwd" : "${workspaceFolder}/",
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}
